{
  "name": "remax",
  "version": "1.19.5",
  "description": "Remax 是一个全新的基于 React 的小程序开发框架",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "keywords": [
    "react",
    "miniapp",
    "mini-program",
    "wechat"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/remaxjs/remax/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remaxjs/remax.git"
  },
  "homepage": "https://remaxjs.org",
  "scripts": {
    "clean": "rm -rf esm cjs",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:esm": "npm run build:esm -- -w",
    "watch:cjs": "npm run build:cjs -- -w",
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir cjs",
    "test": "jest",
    "test:debug": "npx --node-arg=--inspect-brk jest -i"
  },
  "dependencies": {
    "@remax/miniprogram-api-typings": "^2.9.3",
    "lodash.kebabcase": "^4.1.1",
    "mini-types": "^0.1.1",
    "react-reconciler": "0.24.0",
    "remax-alipay": "^1.19.1",
    "remax-one": "^1.19.1",
    "remax-toutiao": "^1.19.1",
    "remax-web": "^0.0.1",
    "remax-wechat": "^1.19.1",
    "remax.macro": "^1.19.1",
    "scheduler": "0.19.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/lodash.kebabcase": "^4.1.6",
    "@types/node": "^13.1.6",
    "@types/react": "^16.8.22",
    "@types/react-reconciler": "^0.18.0",
    "@types/react-test-renderer": "^16.9.0",
    "concurrently": "^5.0.0",
    "jest": "^24.8.0",
    "object-path-immutable": "^4.0.2",
    "react": "^16.8.6",
    "react-test-renderer": "^16.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.3"
  }
}
