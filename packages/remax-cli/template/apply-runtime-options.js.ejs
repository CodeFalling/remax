import { RuntimeOptions } from '@remax/runtime';
import { PluginDriver } from '@remax/runtime';
import { pageEvents, appEvents, hostComponents } from '/__remax_lifecycle_events__';

const pluginDriver = new PluginDriver([
<% pluginFiles.forEach(file => { %>
  require('<%- file %>'),
<% }) %>
].map(p => p.default || p));


RuntimeOptions.apply({
  pxToRpx: <%- pxToRpx %>,
  pluginDriver,
  hostComponents,
  pageEvents,
  appEvents,
})